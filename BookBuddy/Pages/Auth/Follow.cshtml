@page
@model BookBuddy.Pages.Auth.FollowModel
@using BookBuddy.Services
@inject DataStore DataStore

<h2>Sledi uporabnikom</h2>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Uporabni≈°ko ime</th>
                <th>Akcija</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var uporabnik in Model.VsiUporabniki)
            {
                <tr>
                    <td>@uporabnik.UporabniskoIme</td>
                    <td>
                        @{
                            var currentUporabnik = DataStore.TrenutniUporabnik;
                            var alreadyFollowing = currentUporabnik?.Sledi?.Any(s => s.UporabniskoIme == uporabnik.UporabniskoIme) == true;
                        }
                        <button type="submit" name="followUser" value="@uporabnik.UporabniskoIme" 
                                class="btn @(alreadyFollowing ? "btn-warning" : "btn-primary")">
                            @(alreadyFollowing ? "Nehaj slediti" : "Sledi")
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

@if (!Model.VsiUporabniki.Any())
{
    <p>Ni drugih uporabnikov za prikaz.</p>
}