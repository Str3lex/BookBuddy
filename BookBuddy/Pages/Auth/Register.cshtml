@page
@model BookBuddy.Pages.Auth.RegisterModel

<h2>Registracija</h2>

<form method="post">
    <div class="form-group">
        <label>Uporabniško ime:</label>
        <input asp-for="UporabniskoIme" class="form-control" />
    </div>

    <div class="form-group">
        <label>E-pošta:</label>
        <input asp-for="Eposta" type="email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Geslo:</label>
        <input asp-for="Geslo" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Registriraj se</button>
</form>

@if (Model.Sporocilo != null)
{
    <div class="alert alert-danger mt-3">@Model.Sporocilo</div>
}

<p class="mt-3">
    Že imate račun? <a href="/Auth/Login">Prijavite se tukaj</a>.
</p>
