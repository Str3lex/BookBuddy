@page
@model BookBuddy.Pages.Uporabnik.ProfileModel

<h2>Moj profil</h2>

@if (Model.TrenutniUporabnik != null)
{
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Pozdravljen, @Model.TrenutniUporabnik.UporabniskoIme!</h5>
            <p class="card-text">Email: @Model.TrenutniUporabnik.Email</p>
        </div>
    </div>

    <form method="post">
        <div class="form-group">
            <label>Ime:</label>
            <input asp-for="Ime" class="form-control" />
        </div>

        <div class="form-group">
            <label>Priimek:</label>
            <input asp-for="Priimek" class="form-control" />
        </div>

        <div class="form-group">
            <label>Najljubša zvrst:</label>
            <input asp-for="NajljubsaZvrst" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Shrani spremembe</button>
    </form>

    @if (Model.Sporocilo != null)
    {
        <div class="alert alert-success mt-3">@Model.Sporocilo</div>
    }
    else
    {
        <div class="alert alert-warning">
        </div>
    }
}