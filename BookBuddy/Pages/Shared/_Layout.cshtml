<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookBuddy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Custom styles for full-width header and footer */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            padding-left: 0;
            padding-right: 0;
        }

            .navbar > .container-fluid {
                padding-left: 1rem;
                padding-right: 1rem;
            }

        .footer {
            margin-top: auto;
            width: 100%;
        }

            .footer .container-fluid {
                padding-left: 1rem;
                padding-right: 1rem;
            }

        main {
            flex: 1;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">BookBuddy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">Domov</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Books/List">Vse knjige</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Books/Add">Dodaj knjigo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Books/Random">Naključna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Auth/Activity">Aktivnosti</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Auth/Follow">Sledi</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Auth/Login">Prijava</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Auth/Register">Registracija</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Uporabnik/Profile">Profil</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2024 - BookBuddy
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
