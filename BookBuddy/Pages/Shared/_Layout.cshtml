<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookBuddy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand nav-link-custom" href="/">BookBuddy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" href="/">Domov</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" href="/Books/List">Vse knjige</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" href="/Books/Add">Dodaj knjigo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" href="/Books/Random">Naključna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" href="/Books/Statistics">Statistika</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" href="/Auth/Activity">Aktivnosti</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" href="/Auth/Follow">Sledi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" href="/Books/OrderBy">Razvrščanje</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <!-- Theme Toggle -->
                        <li class="nav-item">
                            <button id="themeToggle" class="btn btn-outline-secondary btn-sm">
                                🌙 Dark
                            </button>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" href="/Auth/Login">Prijava</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" href="/Auth/Register">Registracija</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" href="/Uporabnik/Profile">Profil</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<footer class="border-top footer text-muted mt-auto py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                &copy; 2025 - BookBuddy
            </div>
            <div class="col-md-6 text-md-end">
                <small>Vaša knjižnica vedno s seboj</small>
            </div>
        </div>
    </div>
</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Theme toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('themeToggle');
            const html = document.documentElement;
            
            // Load saved theme from localStorage
            const savedTheme = localStorage.getItem('theme') || 'light';
            html.setAttribute('data-theme', savedTheme);
            updateToggleButton(savedTheme);
            
            // Toggle theme on button click
            themeToggle.addEventListener('click', function() {
                const currentTheme = html.getAttribute('data-theme');
                const newTheme = currentTheme === 'light' ? 'dark' : 'light';
                
                html.setAttribute('data-theme', newTheme);
                localStorage.setItem('theme', newTheme);
                updateToggleButton(newTheme);
            });
            
            function updateToggleButton(theme) {
                themeToggle.textContent = theme === 'light' ? '🌙 Dark' : '☀️ Light';
                themeToggle.className = theme === 'light' ? 
                    'btn btn-outline-secondary btn-sm' : 
                    'btn btn-outline-warning btn-sm';
            }
        });
    </script>
</body>
</html>