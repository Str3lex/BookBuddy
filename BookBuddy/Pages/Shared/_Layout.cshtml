<!DOCTYPE html>
<html lang="sl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookBuddy</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>

    <nav class="navbar navbar-dark bg-dark navbar-expand-lg mb-4">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">BookBuddy</a>
            <div class="navbar-nav flex-row">
                <a class="nav-link text-light me-3" asp-page="/Books/List">Moje knjige</a>
                <a class="nav-link text-light me-3" asp-page="/Books/Add">Dodaj knjigo</a>
                <a class="nav-link text-light me-3" asp-page="/Books/Statistics">Statistika</a>
                <a class="nav-link text-light me-3" asp-page="/User/Profile">Profil</a>
                <a class="btn btn-warning" asp-page="/Auth/Login">Prijava</a>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
