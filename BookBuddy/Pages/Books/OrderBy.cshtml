@page
@model BookBuddy.Pages.Books.OrderByModel
@{
    ViewData["Title"] = "Razvrščanje Knjig";
}

<div class="container">
    <h1>Razvrščanje Knjig</h1>

    <!-- Filter in sort controls -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Razvrščanje in Filtriranje</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Razvrsti po</label>
                    <select asp-for="SortBy" asp-items="Model.SortOptions" class="form-select" onchange="this.form.submit()">
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Vrstni red</label>
                    <select asp-for="SortOrder" asp-items="Model.OrderOptions" class="form-select" onchange="this.form.submit()">
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Filter po žanru</label>
                    <select asp-for="ZanrFilter" asp-items="Model.ZanrOptions" class="form-select" onchange="this.form.submit()">
                    </select>
                </div>
            </form>
            <div class="mt-3">
                <a href="/Books/OrderBy" class="btn btn-outline-secondary">Ponastavi filtre</a>
            </div>
        </div>
    </div>

    <!-- Knjige -->
    @if (!Model.Knjige.Any())
    {
        <div class="alert alert-info">
            <p>Ni knjig, ki ustrezajo izbranim filterjem.</p>
            <a href="/Books/OrderBy" class="btn btn-primary">Prikaži vse knjige</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Naslov</th>
                        <th>Avtor</th>
                        <th>Žanr</th>
                        <th>Leto</th>
                        <th>Ocena</th>
                        <th>Status</th>
                        <th>Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var knjiga in Model.Knjige)
                    {
                        <tr>
                            <td>@knjiga.Naslov</td>
                            <td>@knjiga.Avtor</td>
                            <td><span class="badge bg-primary">@knjiga.Zanr</span></td>
                            <td>@knjiga.LetoIzdaje</td>
                            <td>
                                @if (knjiga.Rate > 0)
                                {
                                    <span class="text-warning">@knjiga.Rate/5</span>
                                }
                                else
                                {
                                    <span class="text-muted">Brez ocene</span>
                                }
                            </td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(knjiga.Status)">@knjiga.Status</span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="/Books/Edit?id=@knjiga.Id" class="btn btn-outline-warning">Uredi</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Prebrana" => "bg-success",
            "Trenutno berem" => "bg-primary",
            "Na čakanju" => "bg-warning",
            "Želim prebrati" => "bg-info",
            _ => "bg-secondary"
        };
    }
}