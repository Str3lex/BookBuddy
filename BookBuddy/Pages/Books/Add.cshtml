@page
@model BookBuddy.Pages.Books.AddModel

<h2>Dodaj novo knjigo</h2>

<form method="post">
    <div class="form-group">
        <label>Naslov:</label>
        <input asp-for="Naslov" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Avtor:</label>
        <input asp-for="Avtor" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Leto izdaje:</label>
        <input asp-for="LetoIzdaje" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Dodaj knjigo</button>
</form>

@if (Model.Sporocilo != null)
{
    <div class="alert alert-success mt-3">@Model.Sporocilo</div>
}

<p class="mt-3">
    <a href="/Books/List" class="btn btn-secondary">Nazaj na seznam knjig</a>
</p>
